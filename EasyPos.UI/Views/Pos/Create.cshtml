
@model PosVM
@{
    ViewData["Title"] = "Create";
}

<header class="header bg-ui-general">
    <div class="header-info">
        <h1 class="header-title">
            <strong>POS Manage</strong>
        </h1>
    </div>
</header>
<div class="main-content">
    <div class="row">

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-body">

                        <form asp-action="create" method="POST">
                            <div class="row">
                                <div class="mb-3 col-md-6">


                                    <label>Product</label>
                                    @if (Model.ProductList != null)
                                    {
                                        <select class="form-control basic-select2" asp-items="@Model.ProductList" id="ProductList">
                                            <option selected value="">Select Product</option>
                                        </select>
                                    }

                                </div>
                                <div class="mb-3 col-md-6">


                                    <label>Sales Type</label>

                                    <select class="form-control " id="salesType">
                                        <option selected value="1">Retail Sale</option>
                                        <option value="2">Whole Sale</option>
                                    </select>


                                </div>
                            </div>

                            @* <div class="form-row">
                            <input type="text" class="form-control" name="Sales.SalesDate">
                            </div>*@

                            <div class="row">



                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <select class="form-control">
                                            <option selected >Walking Customer</option>
                                        </select>
                                    </div>
                                   
                                </div>
                               


                            </div>




                            <div class="row">
                                <div class="col-md-12 mt-4">
                                    <table class="table table-bordered" id="SellProduct">
                                        <thead class="bg-success text-light">
                                            <tr>
                                                <th>Name</th>
                                                <th>QTY</th>
                                                <th>Price</th>
                                                <th>Sub T</th>
                                                <th>
                                                    <a href="#" id="clearList" class="text-light">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </a>
                                                </th>
                                            </tr>
                                        </thead>

                                        <tbody id="tbody">
                                        </tbody>

                                        <tfoot class="bg-secondary text-light">
                                            <tr>
                                                <th class="text-center" colspan="2">
                                                    <strong>  Total Qty: <span id="TotalQtyTxt">0</span>  <input type="hidden" value="0" id="sellTotalQty" /> </strong>

                                                </th>
                                                <th class="text-center" colspan="3">
                                                    <strong> Total: <span id="grandTotalTxt">0</span> Tk <input type="hidden" value="0" name="Sales.GrandTotal" id="PurchaseGrandTotal" /> </strong>

                                                </th>
                                            </tr>
                                        </tfoot>
                                    </table>

                                    <div class="form-gorup text-center">
                                        <button type="button" id="payment-btn" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#payment-modal">
                                            <i class="fa fa-money"></i>
                                            Payment
                                        </button>
                                    </div>

                                    <div class="modal fade" id="payment-modal" tabindex="-1">
                                        <div class="modal-dialog modal-md">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="myModalLabel">Payment</h4>
                                                    <button type="button" class="close" data-dismiss="modal">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <table class="table table-bordered text-left">
                                                        <tbody>
                                                            <tr>
                                                                <td width="50%">
                                                                    <strong class="float-left">Paying Items: </strong>
                                                                    <strong class="float-right">(<span id="items">0</span>)</strong>
                                                                </td>
                                                                <td>
                                                                    <strong class="float-left">Total Receivable: </strong>
                                                                    <strong class="float-right">(<span id="receivable">0</span> Tk)</strong>
                                                                    <input type="hidden" name="Sales.Receivable" id="receivable_input" value="0">
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td width="50%">
                                                                    <strong class="float-left">After Discount : </strong>
                                                                    <strong class="float-right"> (<span id="after_discount">0</span> Tk)</strong>
                                                                </td>
                                                                <td>
                                                                    <strong class="float-left">Balance </strong>
                                                                    <strong class="float-right"> (<span id="balance">0</span> Tk)</strong>
                                                                    <input type="hidden" name="balance" id="balance_input" value="0">
                                                                </td>
                                                            </tr>



                                                        </tbody>
                                                    </table>
                                                    <hr>








                                                    <div class="form-row">
                                                        <div class="form-group col-md-6">
                                                            <label for="discount">Discount</label>
                                                            <input type="text" class="form-control" id="discount" name="Sales.Discount" placeholder="0%">

                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label for="payment_method">Note</label>
                                                            <textarea name="Sales.Note" class="form-control"></textarea>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="form-row">

                                                       





                                                        <div class="form-group col-md-6">
                                                            <label for="pay_amount">Pay Amount</label>
                                                            <div class="input-group">
                                                                <input type="number" step="any" class="form-control" name="Sales.Receivable" id="pay_amount" placeholder="Pay Amount...">
                                                                <span class="input-group-btn">
                                                                    <button class="btn btn-warning" type="button" onclick="SetPaidAmount()" id="paid_btn">PAID!</button>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-bold btn-secondary" data-bs-dismiss="modal">Cancel</button>

                                                    <button type="submit" class="btn btn-bold btn-primary" id="order-btn">
                                                        <i class="fa fa-shopping-cart"></i>
                                                        Order
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                </div>
                            </div>

                        </form>










                    </div>
                </div>
               
            </div>
        </div>

        <div class="modal fade" id="alert-modal" tabindex="-1">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="text-center">
                            <h3>Please add some products.</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




@section Scripts
    {
    <script src="~/js/Pos/pos.js"></script>
}